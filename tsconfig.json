{
    "files": [
        "src/index.ts"
    ],
    "include": [
        "types/*.d.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "declaration": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "lib": [
            "es5",
            "es2015.promise"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "types/*"
            ]
        }
    }
}
