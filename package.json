        "@types/node-forge": "^1.3.14",
        "eslint": "^9.37.0",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.3",
        "npm-run-all2": "^8.0.4",
        "semantic-release": "^24.2.9",
